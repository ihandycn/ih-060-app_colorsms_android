<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <com.android.messaging.ui.view.RecyclerViewWidthSlideListener
        android:id="@+id/emoji_detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="22dp"
        android:paddingRight="22dp" />

    <ImageView
        android:id="@+id/emoji_detail_back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/gray_circle_btn_bg_drawable"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back_light"
        tools:ignore="RtlHardcoded" />
</FrameLayout>