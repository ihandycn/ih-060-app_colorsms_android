<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/emoji_store_back_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            tools:ignore="RtlHardcoded" />

        <com.android.messaging.ui.view.MessagesTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/emoji_store_back_btn"
            android:includeFontPadding="false"
            android:text="@string/sms_emoji_store_title"
            android:textColor="@color/action_bar_title_text_color"
            android:textSize="16.7sp"
            app:font_style="bold"
            app:typeface="@string/custom_font_semibold"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/emoji_store_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>