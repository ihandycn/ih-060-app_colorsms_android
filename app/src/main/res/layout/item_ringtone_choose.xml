<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58.1dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="32.7dp"
        android:layout_height="32.7dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ringtone" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="21.3dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/radio"
        android:layout_toEndOf="@+id/image"
        android:includeFontPadding="false"
        android:textColor="#000000"
        app:typeface="@string/custom_font_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53.3dp"
        android:background="#e4eaf0" />

    <RadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp" />

    <View
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="#fe5dc7" />
</RelativeLayout>