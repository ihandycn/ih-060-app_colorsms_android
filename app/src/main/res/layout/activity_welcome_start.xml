<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_welcome_start_bg" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_start_button"
        android:layout_width="260.7dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:background="@drawable/welcome_button_white_bg"
        android:gravity="center"
        android:paddingTop="1dp"
        android:text="@string/welcome_start_button"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:typeface="@string/custom_font_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_service"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/welcome_start_and"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_policy"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />

    </LinearLayout>

</FrameLayout>