<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:clipChildren="false">

        <FrameLayout
            android:id="@+id/welcome_guide_lottie_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="120dp"
            android:clipChildren="false">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/welcome_guide_lottie_anim_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/welcome_guide_lottie_anim_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>
        </FrameLayout>

        <com.android.messaging.util.view.AdvancedPageIndicator
            android:id="@+id/welcome_guide_viewpager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            app:circleColor="#e5e5e5"
            app:circleRadius="3dp"
            app:circleSpacing="9dp"
            app:indicatorColor="#7f7f7f"/>

        <com.superapps.view.ViewPagerFixed
            android:id="@+id/welcome_guide_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:overScrollMode="never"
            android:paddingBottom="63dp"/>
    </FrameLayout>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_start_button"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welcome_button_white_bg"
        android:gravity="center"
        android:text="@string/welcome_start_button"
        android:textColor="#fff"
        android:textSize="14sp"
        android:paddingTop="3dp"
        app:typeface="@string/custom_font_bold"/>

    <LinearLayout
        android:id="@+id/welcome_start_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@id/welcome_start_button">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_service"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold"/>

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/welcome_start_and"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_policy"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold"/>

    </LinearLayout>


</RelativeLayout>