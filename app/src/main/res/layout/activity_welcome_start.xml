<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"
    tools:visibility="visible">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:layout_constraintBottom_toTopOf="@+id/welcome_start_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/welcome_guide_lottie_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            app:layout_constraintBottom_toTopOf="@+id/welcome_guide_viewpager_title"
            app:layout_constraintDimensionRatio="252:219"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.7">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/welcome_guide_lottie_anim_backward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/welcome_guide_lottie_anim_forward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>
        </FrameLayout>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_guide_viewpager_title"
            android:layout_width="wrap_content"
            android:text="@string/welcome_viewpager_item_title_0"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#282a31"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:maxLines="2"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/welcome_guide_viewpager_body"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_guide_lottie_container"
            app:typeface="@string/custom_font_semibold"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_guide_viewpager_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/welcome_viewpager_item_body_0"
            android:lineSpacingExtra="2dp"
            android:visibility="invisible"
            android:lines="2"
            android:textColor="#494b4f"
            android:layout_marginTop="-4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/welcome_guide_viewpager_indicator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_guide_viewpager_title"
            app:layout_constraintWidth_percent="0.7"
            app:typeface="@string/custom_font_regular"/>

        <com.android.messaging.util.view.AdvancedPageIndicator
            android:id="@+id/welcome_guide_viewpager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:circleColor="#e5e5e5"
            app:circleRadius="3dp"
            app:circleSpacing="9dp"
            app:indicatorColor="#7f7f7f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_guide_viewpager_body"/>
    </android.support.constraint.ConstraintLayout>

    <com.superapps.view.ViewPagerFixed
        android:id="@+id/welcome_guide_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/welcome_start_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_start_button"
        android:layout_width="0dp"
        android:layout_marginBottom="60dp"
        android:paddingTop="3dp"
        android:gravity="center"
        android:text="@string/welcome_start_button"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="164:44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.455"
        app:typeface="@string/custom_font_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_service"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold"/>

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/welcome_start_and"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_policy"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>