<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_welcome_start_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_start_button"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/welcome_button_white_bg"
        android:gravity="center"
        android:text="@string/welcome_start_button"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="3dp"
        app:typeface="@string/custom_font_bold" />

    <LinearLayout
        android:id="@+id/welcome_start_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/welcome_start_button">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_service"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/welcome_start_and"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/welcome_start_policy"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>