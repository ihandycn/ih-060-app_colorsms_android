<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_welcome_start_bg"
        app:layout_constraintTop_toBottomOf="@id/guideline_2" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_start_button"
        android:layout_width="260.7dp"
        android:layout_height="46dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/welcome_button_white_bg"
        android:gravity="center"
        android:text="@string/welcome_start_button"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/welcome_start_line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typeface="@string/custom_font_bold" />

    <LinearLayout
        android:id="@+id/welcome_start_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layout_start_line_2">

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_start_description"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/welcome_start_service"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_start_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_start_and"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_start_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/welcome_start_policy"
            android:textColor="@color/welcome_text_start_description"
            android:textSize="9.3sp"
            app:typeface="@string/custom_font_semibold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>