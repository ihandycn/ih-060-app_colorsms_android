<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/setting_top_tool_bar_view"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46"/>

    <com.superapps.view.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222327"
        android:layout_marginBottom="36dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/theme_select_description"
        app:typeface="@string/custom_font_semibold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/iv_theme_select_1"
                android:layout_width="62dp"
                android:scaleType="center"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_2"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_3"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/iv_theme_select_4"
                android:layout_width="62dp"
                android:scaleType="center"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_5"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_6"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/iv_theme_select_7"
                android:layout_width="62dp"
                android:scaleType="center"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_8"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_9"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/iv_theme_select_10"
                android:layout_width="62dp"
                android:scaleType="center"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_11"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_theme_select_12"
                android:scaleType="center"
                android:layout_width="62dp"
                android:layout_height="62dp"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82"/>
</LinearLayout>
