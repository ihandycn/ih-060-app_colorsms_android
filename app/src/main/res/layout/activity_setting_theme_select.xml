<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_tool_bar_view" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46" />

    <com.android.messaging.ui.view.MessagesTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/theme_select_description"
        android:textColor="#222327"
        android:textSize="16sp"
        app:font_family_changeable="true"
        app:typeface="@string/custom_font_semibold" />


    <com.android.messaging.ui.CustomFooterViewPager
        android:id="@+id/custom_footer_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="450">

    </com.android.messaging.ui.CustomFooterViewPager>
</LinearLayout>
