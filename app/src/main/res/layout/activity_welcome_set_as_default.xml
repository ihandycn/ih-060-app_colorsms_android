<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/welcome_set_default_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/welcome_set_default_banner"
            android:layout_width="wrap_content"
            android:src="@drawable/welcome_set_as_default_banner"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/welcome_set_default_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/welcome_set_default_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:maxLines="2"
            android:textColor="#282a31"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:text="@string/welcome_set_default_title"
            app:layout_constraintBottom_toTopOf="@+id/welcome_guide_viewpager_body"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_set_default_banner"
            app:layout_constraintWidth_percent="0.8"
            app:typeface="@string/custom_font_semibold"/>

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/welcome_guide_viewpager_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/message_welcome_set_as_default_title"
            android:textColor="#494b4f"
            android:textSize="13.3sp"
            android:maxLines="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_set_default_title"
            app:layout_constraintWidth_percent="0.7"
            app:typeface="@string/custom_font_regular"/>
    </android.support.constraint.ConstraintLayout>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/welcome_set_default_button"
        android:layout_width="0dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="@string/welcome_set_default_button"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_height="0dp"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="164:44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.455"
        app:typeface="@string/custom_font_bold"/>
</android.support.constraint.ConstraintLayout>
