<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_set_default_skip_button"
        android:layout_width="52.7dp"
        android:layout_height="30dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/welcome_set_default_skip"
        android:textSize="13.3sp"
        android:textColor="#aa7f7f7f"
        android:background="@drawable/welcome_set_default_skip_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="@string/custom_font_medium" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_set_default_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:text="@string/welcome_set_default_title"
        android:textColor="@color/welcome_text_permission_list"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_set_default_skip_button"
        app:typeface="@string/custom_font_bold" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_set_default_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11.7dp"
        android:lineSpacingExtra="6.7sp"
        android:text="@string/welcome_set_default_description"
        android:textColor="@color/welcome_text_description"
        android:textSize="12.7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_set_default_title"
        app:typeface="@string/custom_font_medium" />

    <LinearLayout
        android:id="@+id/welcome_set_default_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_set_default_description">

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableStart="@drawable/ic_welcome_set_default_emoji"
            android:gravity="center_vertical"
            android:text="@string/welcome_set_default_emoji"
            android:textColor="@color/welcome_text_permission_list"
            android:textSize="12sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="11dp"
            android:drawableStart="@drawable/ic_welcome_set_default_music"
            android:gravity="center_vertical"
            android:text="@string/welcome_set_default_music"
            android:textColor="@color/welcome_text_permission_list"
            android:textSize="12sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="11dp"
            android:drawableStart="@drawable/ic_welcome_set_default_group"
            android:gravity="center_vertical"
            android:text="@string/welcome_set_default_group"
            android:textColor="@color/welcome_text_permission_list"
            android:textSize="12sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="11dp"
            android:drawableStart="@drawable/ic_welcome_set_default_delete"
            android:gravity="center_vertical"
            android:text="@string/welcome_set_default_delete"
            android:textColor="@color/welcome_text_permission_list"
            android:textSize="12sp"
            app:typeface="@string/custom_font_medium" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="11dp"
            android:drawableStart="@drawable/ic_welcome_set_default_feature"
            android:gravity="center_vertical"
            android:text="@string/welcome_set_default_feature"
            android:textColor="@color/welcome_text_permission_list"
            android:textSize="12sp"
            app:typeface="@string/custom_font_medium" />
    </LinearLayout>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_set_default_button"
        android:layout_width="260.7dp"
        android:layout_height="46dp"
        android:layout_marginBottom="24.7dp"
        android:background="@drawable/welcome_button_green_bg"
        android:gravity="center"
        android:text="@string/welcome_set_default_button"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typeface="@string/custom_font_bold" />


</android.support.constraint.ConstraintLayout>
