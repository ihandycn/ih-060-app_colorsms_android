<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_metadata"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:importantForAccessibility="noHideDescendants"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/message_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingLeft="7dp"
        android:paddingEnd="5.3dp"
        android:paddingRight="5.3dp">

        <ImageView
            android:id="@+id/message_lock"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/message_status"
            style="@style/ConversationMessageStatus"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1.7dp"
            android:layout_marginRight="1.7dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="gone"
            app:typeface="@string/custom_font_regular"/>

        <ImageView
            android:id="@+id/smsDeliveredBadge"
            style="@style/SmsDeliverdBadge"
            android:layout_width="13.7dp"
            android:layout_height="10.3dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
