<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tab_custom_view"
        android:layout_width="40dp"
        android:layout_height="34.7dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/tab_icon_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@drawable/emoji_tab_normal_icon"
            android:translationY="-0.65dp"/>

        <ImageView
            android:id="@+id/tab_new_view"
            android:layout_width="4.7dp"
            android:layout_height="4.7dp"
            android:layout_toEndOf="@id/tab_icon_view"
            android:layout_alignTop="@id/tab_icon_view"
            android:layout_marginStart="1.3dp"
            android:layout_marginTop="-1.3dp"
            android:background="@drawable/emoji_new_tab_guide_drawable"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="1.7dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>