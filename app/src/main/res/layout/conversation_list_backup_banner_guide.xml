<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="17.3dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backup_banner_background">

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/backup_banner_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/backup_banner_guide_title"
        android:layout_marginStart="14.7dp"
        android:layout_marginEnd="32.3dp"
        android:layout_marginTop="17.7dp"
        app:typeface="@string/custom_font_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backup_banner_button"/>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/backup_banner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="11.3dp"
        android:paddingEnd="11.3dp"
        android:paddingTop="11.3dp"
        android:paddingBottom="11.7dp"
        android:layout_marginEnd="32.7dp"
        android:layout_marginTop="17.7dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/backup_button_text"
        android:textColor="@color/backup_banner_guide_button_text_color"
        android:textSize="14sp"
        app:typeface="@string/custom_font_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/backup_banner_close"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="28dp"
        android:layout_width="28dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_close_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>