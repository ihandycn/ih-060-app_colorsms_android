<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConversationMessageViewStyle"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/conversation_icon_container"
        android:layout_width="@dimen/conversation_message_contact_icon_container_size"
        android:layout_height="@dimen/conversation_message_contact_icon_container_size">

        <net.appcloudbox.ads.base.ContainerView.AcbNativeAdIconView
            android:id="@+id/ad_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/conversation_message_bubble_incoming_top_margin"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ad_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_ad_chat"/>

            <com.superapps.view.MessagesTextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/ad_corner"
                android:textSize="13.3dp"
                android:textColor="#fff"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                app:font_size_changeable="true"
                app:typeface="@string/custom_font_medium"/>
        </RelativeLayout>

        <com.superapps.view.MessagesTextView
            android:id="@+id/ad_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_container"
            android:textColor="#fff"
            android:textSize="13.3dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:font_size_changeable="true"
            app:typeface="@string/custom_font_regular"/>

        <com.superapps.view.MessagesTextView
            android:id="@+id/ad_action"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/ad_subtitle"
            android:paddingLeft="15dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:clickable="true"
            android:paddingRight="15dp"
            app:font_size_changeable="false"
            app:typeface="@string/custom_font_medium"/>

        <ImageView
            android:id="@+id/action_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ad_action"
            android:alpha="0.5"
            android:layout_alignBottom="@id/ad_action"
            android:src="@drawable/conversation_ad_action_bg"
            android:layout_alignLeft="@id/ad_action"
            android:layout_alignRight="@id/ad_action"/>

        <FrameLayout
            android:id="@+id/ad_choice"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>


