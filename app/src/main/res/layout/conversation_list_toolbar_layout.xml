<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-17dp"
        android:layout_marginRight="72dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="-0.01"
        android:text="@string/messages"
        android:textColor="@color/action_bar_title_text_color"
        android:textSize="@dimen/action_bar_page_title_text_size"
        app:font_family_changeable="false"
        app:typefaceFileName="@string/action_bar_title_typeface" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emoji_store_guide_content"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="centerCrop"
        android:visibility="invisible">
    </com.airbnb.lottie.LottieAnimationView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emoji_store_guide_end"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="centerCrop"
        android:visibility="invisible">
    </com.airbnb.lottie.LottieAnimationView>

    <ImageView
        android:id="@+id/emoji_store_guide_triangle"
        android:layout_width="6.3dp"
        android:layout_height="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:src="@drawable/emoji_store_guide_triangle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/emoji_store_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_emoji" />

    <ImageView
        android:id="@+id/emoji_store_circle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/emoji_store_highlight_circle"
        android:visibility="invisible" />
</RelativeLayout>

