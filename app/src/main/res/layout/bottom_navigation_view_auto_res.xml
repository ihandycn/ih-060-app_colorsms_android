<?xml version="1.0" encoding="utf-8"?>
<com.android.messaging.ui.conversationlist.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_navigation_view_height"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    tools:background="@android:color/darker_gray">

    <LinearLayout
        android:id="@+id/item_messaging"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_messaging_icon"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:src="@drawable/bottom_navigation_messaging_icon_selector" />

        <TextView
            android:id="@+id/item_messaging_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/bottom_navigation_item_messaging"
            android:textColor="@drawable/bottom_navigation_text_selector"
            android:textSize="@dimen/bottom_navigation_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_smsshow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_smsshow_icon"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:src="@drawable/bottom_navigation_sms_show_icon_selector" />

        <TextView
            android:id="@+id/item_smsshow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/bottom_navigation_item_sms_show"
            android:textColor="@drawable/bottom_navigation_text_selector"
            android:textSize="@dimen/bottom_navigation_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_emoji"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_emoji_icon"
            android:layout_width="39dp"
            android:layout_height="29dp"
            android:src="@drawable/bottom_navigation_emoji_icon_selector" />

        <TextView
            android:id="@+id/item_emoji_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/bottom_navigation_item_emoji"
            android:textColor="@drawable/bottom_navigation_text_selector"
            android:textSize="@dimen/bottom_navigation_text_size" />
    </LinearLayout>

</com.android.messaging.ui.conversationlist.BottomNavigationView>