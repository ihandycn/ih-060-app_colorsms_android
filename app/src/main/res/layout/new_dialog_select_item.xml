<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_select_item">

    <RadioButton
        android:id="@+id/dialog_select_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:drawableLeft="@drawable/select_circle_btn"
        android:textColor="@color/dialog_content_text"
        android:alpha="@dimen/light_dialog_choice_text"
        tools:text="test"
        android:drawableStart="@drawable/select_circle_btn"
        android:background="@drawable/material_compat_button_bg"
        android:drawablePadding="@dimen/light_dialog_choice_icon_padding"
        android:paddingLeft="25dp"
        android:paddingStart="25dp"
        android:textSize="@dimen/light_dialog_choice_text_size" />
</LinearLayout>
