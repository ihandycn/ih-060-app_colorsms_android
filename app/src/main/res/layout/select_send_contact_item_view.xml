<?xml version="1.0" encoding="utf-8"?>
<com.android.messaging.ui.mediapicker.sendcontact.ContactSelectListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:layout_width="@dimen/contact_list_icon_size"
        android:layout_height="@dimen/contact_list_icon_size"
        android:layout_marginStart="16dp">

        <View
            android:id="@+id/contact_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no" />

        <com.android.messaging.ui.ContactIconView
            android:id="@+id/contact_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            app:iconSize="normal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#19191c"
            android:textSize="16sp"
            app:typeface="@string/custom_font_medium" />

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#222327"
            android:textSize="13sp"
            app:typeface="@string/custom_font_regular" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/contact_checked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp" />
</com.android.messaging.ui.mediapicker.sendcontact.ContactSelectListItemView>