<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_welcome_permission_phone" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/welcome_permission_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:paddingTop="2dp"
            android:text="@string/welcome_permission_phone_title"
            android:textColor="#e6fd9d20"
            android:textSize="18sp"
            app:typeface="@string/custom_font_bold" />

        <ImageView
            android:id="@+id/welcome_permission_phone_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_welcome_permission_warning"
            android:visibility="invisible" />
    </LinearLayout>

    <com.superapps.view.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:drawablePadding="9dp"
        android:drawableStart="@drawable/ic_welcome_permission_list_dot"
        android:text="@string/welcome_permission_phone_description_1"
        android:textColor="@color/welcome_text_permission_list"
        android:textSize="12sp"
        app:typeface="@string/custom_font_regular" />

    <com.superapps.view.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="9dp"
        android:drawableStart="@drawable/ic_welcome_permission_list_dot"
        android:text="@string/welcome_permission_phone_description_2"
        android:textColor="@color/welcome_text_permission_list"
        android:textSize="12sp"
        app:typeface="@string/custom_font_regular" />
</LinearLayout>