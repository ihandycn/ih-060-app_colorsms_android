<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.CustomOverScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/light_dialog_content_select_margin_top"
            android:layout_marginStart="24dp"
            android:alpha="@dimen/dialog_content_title"
            android:text="test"
            android:textColor="#6e717b"
            android:textSize="13.3sp"
            app:typeface="@string/custom_font_medium" />

        <ListView
            android:id="@+id/select_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="true"
            android:scrollbars="vertical">

        </ListView>
    </LinearLayout>
</LinearLayout>

