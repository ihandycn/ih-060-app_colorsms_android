<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_permission_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="@string/welcome_permission_title"
        android:textColor="@color/welcome_text_permission_list"
        android:textSize="25.3sp"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="@string/custom_font_bold" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_permission_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:lineSpacingExtra="6.7sp"
        android:text="@string/welcome_permission_description"
        android:textColor="@color/welcome_text_description"
        android:textSize="12.7sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_permission_title"
        app:typeface="@string/custom_font_medium" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <LinearLayout
        android:id="@+id/welcome_permission_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/guideline">


    </LinearLayout>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/welcome_permission_button"
        android:layout_width="260.7dp"
        android:layout_height="46dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/welcome_button_green_bg"
        android:gravity="center"
        android:paddingTop="1dp"
        android:text="@string/welcome_permission_button"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typeface="@string/custom_font_bold" />

</android.support.constraint.ConstraintLayout>
