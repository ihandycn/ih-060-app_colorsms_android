<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/message_free_up_process"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_fileName="lottie/clean_process.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/message_free_up_process_hint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/message_free_up_process_dialog"
        android:layout_marginTop="25.7dp"
        android:layout_marginBottom="26.7dp"
        android:textSize="12.7sp"
        android:textColor="@color/message_back_up_process_hint_color"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.1"
        app:typeface="@string/custom_font_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_free_up_process"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>