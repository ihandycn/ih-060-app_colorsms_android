<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_invalid_name" />

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/privacy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.7sp"
            android:textColor="@color/text_primary_color"
            android:layout_marginTop="-2dp"
            app:typeface="@string/custom_font_semibold"
            tools:text="One New message"/>

        <com.android.messaging.ui.view.MessagesTextView
            android:id="@+id/privacy_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#afb1bf"
            android:includeFontPadding="false"
            android:layout_marginTop="-2dp"
            android:textSize="11sp"
            app:typeface="@string/custom_font_regular"
            tools:text="2 mins ago" />

    </LinearLayout>


    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/privacy_show_message"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginStart="26.7dp"
        android:layout_marginEnd="26.7dp"
        android:gravity="center"
        android:layout_marginBottom="17dp"
        android:includeFontPadding="false"
        android:textColor="@color/primary_color"
        app:typeface="@string/custom_font_semibold"
        android:text="@string/privacy_mode_show_messages"/>

</LinearLayout>