<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_picker_group_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="21.7dp"
        android:layout_marginTop="8.8dp"
        android:layout_marginBottom="8.8dp"
        android:src="@drawable/contact_picker_group_message_icon" />

    <com.android.messaging.ui.view.MessagesTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.7dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/contact_picker_group_icon"
        android:layout_alignTop="@id/contact_picker_group_icon"
        android:text="@string/contact_picker_select_group"
        android:textColor="@color/text_primary_color"
        android:textSize="15.3sp"
        app:typeface="@string/custom_font_medium" />


</RelativeLayout>