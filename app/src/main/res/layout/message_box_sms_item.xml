<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#272d32"
        android:textSize="13.3sp"
        android:background="@drawable/message_box_message_item_background"
        android:maxWidth="265dp"
        android:lineSpacingExtra="3sp"
        android:layout_marginStart="15.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:font_size_changeable="true"
        app:typeface="@string/custom_font_regular"
        tools:text="Apply this deluxe diamond theme to decorate your SMS!" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#afb1be"
        android:textSize="10.7sp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_content"
        android:paddingStart="7dp"
        android:paddingLeft="7dp"
        android:paddingEnd="7dp"
        android:paddingRight="7dp"
        app:typeface="@string/custom_font_regular"
        tools:text="2 mins ago" />

</android.support.constraint.ConstraintLayout>