<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/setting_top_tool_bar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#515151"
            android:textSize="18sp"
            android:text="Muli"/>

        <Button
            android:id="@+id/btn_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#515151"
            android:textSize="12sp"
            android:text="Cinzel"/>

        <Button
            android:id="@+id/btn_big"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#515151"
            android:textSize="18sp"
            android:text="Coiny"/>

        <Button
            android:id="@+id/btn_biggest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#515151"
            android:textSize="18sp"
            android:text="Poppins"/>

    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar"
        android:max="100"
        android:progress="60"
        android:thumbTint="@color/solid_black"
        android:theme="@style/Widget.AppCompat.SeekBar"/>

</LinearLayout>
