<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_set_as_default">

    <com.airbnb.lottie.LottieAnimationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner_set_as_default_anim"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12.7dp"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lottie/banner_set_as_default.json"
        app:lottie_loop="false"
        app:lottie_progress="1"/>

    <com.superapps.view.TypefacedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="70dp"
        android:text="@string/banner_set_default"
        android:textColor="#ff2d2f34"
        android:textSize="15.3sp"
        app:typeface="@string/custom_font_semibold" />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_right" />

</FrameLayout>