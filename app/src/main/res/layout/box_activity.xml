<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="6.7dp"
        android:layout_marginEnd="6.7dp"
        android:background="@drawable/message_box_background">

        <LinearLayout
            android:id="@+id/action_bar_simulation"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/message_box_action_bar_simulation_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.superapps.view.TypefacedTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:typeface="@string/custom_font_bold"
                tools:text="Maria" />

            <ImageView
                android:id="@+id/action_call"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginEnd="12dp"
                android:padding="2dp"
                android:src="@drawable/ic_call" />

            <ImageView
                android:id="@+id/action_close"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginEnd="12dp"
                android:padding="6.7dp"
                android:src="@drawable/ic_message_box_close" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar_simulation"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="outsideInset"
                android:layout_weight="1"
                android:scrollbarThumbVertical="@drawable/message_box_scrollbar"
                android:scrollbars="vertical"
                android:theme="@style/AcbSmsRecyclerViewTheme" />

            <com.android.messaging.ui.messagebox.MessageBoxInputActionView
                android:id="@+id/message_compose_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="50dp" />
        </LinearLayout>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.299" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.701" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/action_delete"
            style="@style/MessageBoxActionTextTheme"
            android:text="@string/message_box_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_view" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/action_unread"
            style="@style/MessageBoxActionTextTheme"
            android:text="@string/message_box_unread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/message_view" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/action_open"
            style="@style/MessageBoxActionTextTheme"
            android:text="@string/message_box_open"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/message_view" />

        <View
            android:layout_width="2px"
            android:layout_height="20dp"
            android:background="#e0e4e7"
            app:layout_constraintBottom_toBottomOf="@id/action_delete"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/action_delete"
            tools:ignore="PxUsage" />

        <View
            android:layout_width="2px"
            android:layout_height="20dp"
            android:background="#e0e4e7"
            app:layout_constraintBottom_toBottomOf="@id/action_delete"
            app:layout_constraintStart_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="@id/action_delete"
            tools:ignore="PxUsage" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>