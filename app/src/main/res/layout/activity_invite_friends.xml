<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="115.3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_edit_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <com.android.messaging.ui.PlainTextEditText
        android:id="@+id/invite_friends_message_text"
        android:layout_width="match_parent"
        android:layout_height="48.7dp"
        android:layout_marginStart="35.7dp"
        android:layout_marginTop="35.3dp"
        android:layout_marginEnd="35.7dp"
        android:background="@null"
        android:gravity="start"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/invite_friends_text_color"
        android:textSize="13.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="@string/custom_font_regular"
        android:text="@string/invite_friends_invite_content" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/invite_friends_message_auto_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35.7dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="35.7dp"
        android:gravity="start"
        android:text="@string/invite_friends_invite_auto_link_content"
        android:textColorLink="@color/invite_friends_auto_link"
        android:textSize="13.3sp"
        app:typeface="@string/custom_font_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autoLink="web">
    </com.android.messaging.ui.view.MessagesTextView>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/invite_friends_invite_cancel_button"
        android:layout_width="64.7dp"
        android:layout_height="24.7dp"
        android:layout_marginStart="185.3dp"
        android:layout_marginTop="103.3dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/invite_friends_button_text_background"
        android:gravity="center"
        android:text="@string/invite_friends_invite_cancel_button"
        android:textColor="@color/invite_friends_button_text_color"
        android:textSize="12sp"
        app:typeface="@string/custom_font_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.android.messaging.ui.view.MessagesTextView>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/invite_friends_invite_save_button"
        android:layout_width="51.7dp"
        android:layout_height="24.7dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="103.3dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/invite_friends_invite_cancel_button"
        android:background="@drawable/invite_friends_button_text_background"
        android:gravity="center"
        android:text="@string/invite_friends_invite_save_button"
        android:textColor="@color/invite_friends_button_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="@string/custom_font_regular">

    </com.android.messaging.ui.view.MessagesTextView>
    
</android.support.constraint.ConstraintLayout>