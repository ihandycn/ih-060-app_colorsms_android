<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/chat_bubble"
        style="@style/PeopleListItemViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <com.android.messaging.ui.view.MessagesTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/menu_bubble"
            android:textColor="#222327"
            android:textSize="16sp"
            app:typeface="@string/custom_font_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/divider_color" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/chat_background"
        style="@style/PeopleListItemViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <com.android.messaging.ui.view.MessagesTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/menu_chat_background"
            android:textColor="#222327"
            android:textSize="16sp"
            app:typeface="@string/custom_font_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/divider_color" />
    </FrameLayout>

    <com.android.messaging.ui.appsettings.SettingItemView
        android:id="@+id/reset_customization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:summary="@string/setting_reset_customization_summary"
        app:title="@string/menu_reset_customization"
        app:type="normal" />

</LinearLayout>

