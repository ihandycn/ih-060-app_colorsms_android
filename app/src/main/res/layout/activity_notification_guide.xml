<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="30.7dp"
        android:layout_marginEnd="17.3dp"
        android:gravity="center"
        android:lineSpacingExtra="5.3sp"
        android:paddingStart="14.7dp"
        android:paddingEnd="14.7dp"
        android:text="@string/notification_guide_skip_button"
        android:textColor="#80494b4f"
        android:textSize="13.3sp"
        android:includeFontPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:typeface="@string/custom_font_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/notification_guide_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33.3dp"
        android:layout_marginEnd="35dp"
        android:lineSpacingExtra="-10sp"
        android:text="@string/notification_guide_title"
        android:textColor="#282a31"
        android:textSize="24sp"
        android:alpha="0"
        android:includeFontPadding="false"
        app:typeface="@string/custom_font_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skip_button" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/notification_guide_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33.3dp"
        android:layout_marginTop="13.3dp"
        android:layout_marginEnd="35dp"
        android:lineSpacingExtra="5.3sp"
        android:text="@string/notification_guide_content"
        android:textColor="#494b4f"
        android:textSize="13.3sp"
        android:alpha="0"
        android:includeFontPadding="false"
        app:typeface="@string/custom_font_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_guide_title" />

    <ImageView
        android:id="@+id/notification_guide_background"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:src="@drawable/notification_guide_bg"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="h, 1.05:1"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_guide_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.167">
    </ImageView>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/notification_guide_confirm_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/welcome_set_default_button"
        android:textSize="14.7sp"
        android:textColor="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:includeFontPadding="false"
        app:typeface="@string/custom_font_bold"
        app:layout_constraintDimensionRatio="164:44"
        app:layout_constraintWidth_percent="0.455"
        app:layout_constraintVertical_bias="0.51"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_guide_background"/>

</android.support.constraint.ConstraintLayout>