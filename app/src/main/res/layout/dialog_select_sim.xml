<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/switch_sim"
        android:textSize="13.3sp"
        android:textColor="#6e717b"
        android:lineSpacingExtra="3.3sp"
        android:layout_marginStart="@dimen/dialog_btn_margin_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="@string/custom_font_medium"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <LinearLayout
            android:id="@+id/container_sim_1"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:id="@+id/iv_check_sim_1"
                android:layout_width="18dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_vertical"
                android:layout_height="18dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="13dp"
                android:paddingTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <com.android.messaging.ui.view.MessagesTextView
                    android:id="@+id/carrier_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_sim"
                    android:textSize="15.3sp"
                    android:textColor="#222327"
                    app:typeface="@string/custom_font_medium"/>

                <com.android.messaging.ui.view.MessagesTextView
                    android:id="@+id/phone_number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="@string/switch_sim"
                    android:textSize="13.3sp"
                    android:textColor="#74767d"
                    app:typeface="@string/custom_font_medium"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_tip_1"
                android:layout_width="wrap_content"
                android:layout_marginEnd="27dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dual_sim_1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_sim_2"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:id="@+id/iv_check_sim_2"
                android:layout_width="18dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_vertical"
                android:layout_height="18dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:layout_height="wrap_content">

                <com.android.messaging.ui.view.MessagesTextView
                    android:id="@+id/carrier_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_sim"
                    android:textSize="15.3sp"
                    android:textColor="#222327"
                    app:typeface="@string/custom_font_medium"/>

                <com.android.messaging.ui.view.MessagesTextView
                    android:id="@+id/phone_number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="@string/switch_sim"
                    android:textSize="13.3sp"
                    android:textColor="#74767d"
                    app:typeface="@string/custom_font_medium"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_tip_2"
                android:layout_width="wrap_content"
                android:layout_marginEnd="27dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dual_sim_2"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>