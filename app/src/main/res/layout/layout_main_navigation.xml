<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/navigation_header_icon"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:paddingBottom="10dp">

        <!-- List view in xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <com.superapps.view.MessagesTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="19dp"
                android:includeFontPadding="false"
                android:text="@string/menu_group_customization"
                android:textColor="#66222327"
                android:textSize="14sp"
                app:typeface="@string/custom_font_medium"/>

            <RelativeLayout
                android:id="@+id/navigation_item_theme"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_theme"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_theme"
                    app:typeface="@string/custom_font_medium"/>

                <com.superapps.view.MessagesTextView
                    android:id="@+id/navigation_item_theme_new_text"
                    style="@style/DrawerMenuNewMark"
                    app:textAllCaps="true"
                    app:typeface="@string/custom_font_bold"/>
            </RelativeLayout>


            <!-- Item Theme Color -->
            <RelativeLayout
                android:id="@+id/navigation_item_theme_color"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_theme_color"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_theme_color"
                    app:typeface="@string/custom_font_medium"/>

                <com.superapps.view.MessagesTextView
                    android:id="@+id/navigation_item_theme_color_new_text"
                    style="@style/DrawerMenuNewMark"
                    app:textAllCaps="true"
                    app:typeface="@string/custom_font_bold"/>
            </RelativeLayout>

            <!-- Item Bubble -->
            <RelativeLayout
                android:id="@+id/navigation_item_bubble"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_bubble"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_bubble"
                    app:typeface="@string/custom_font_medium"/>

                <com.superapps.view.MessagesTextView
                    android:id="@+id/navigation_item_bubble_new_text"
                    style="@style/DrawerMenuNewMark"
                    app:textAllCaps="true"
                    app:typeface="@string/custom_font_bold"/>
            </RelativeLayout>

            <!-- Item Chat Background -->
            <RelativeLayout
                android:id="@+id/navigation_item_chat_background"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_chat"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_chat_background"
                    app:typeface="@string/custom_font_medium"/>

                <com.superapps.view.MessagesTextView
                    android:id="@+id/navigation_item_background_new_text"
                    style="@style/DrawerMenuNewMark"
                    app:textAllCaps="true"
                    app:typeface="@string/custom_font_bold"/>
            </RelativeLayout>

            <!-- Item Change Font -->
            <RelativeLayout
                android:id="@+id/navigation_item_change_font"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_font"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_change_font"
                    app:typeface="@string/custom_font_medium"/>

                <com.superapps.view.MessagesTextView
                    android:id="@+id/navigation_item_font_new_text"
                    style="@style/DrawerMenuNewMark"
                    app:textAllCaps="true"
                    app:typeface="@string/custom_font_bold"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

            <!-- Privacy Box -->
            <RelativeLayout
                android:id="@+id/navigation_item_privacy_box"
                style="@style/DrawerMenuItem"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/menu_icon_private_box"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_privacy_box"
                    app:typeface="@string/custom_font_medium"/>
            </RelativeLayout>

            <!-- Item Setting -->
            <RelativeLayout
                android:id="@+id/navigation_item_setting"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_setting"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_setting"
                    app:typeface="@string/custom_font_medium"/>
            </RelativeLayout>

            <!-- Item Rate -->
            <RelativeLayout
                android:id="@+id/navigation_item_rate"
                style="@style/DrawerMenuItem">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/DrawerMenuIcon"
                    app:srcCompat="@drawable/ic_menu_rate"/>

                <com.superapps.view.MessagesTextView
                    style="@style/DrawerMenuTitle"
                    android:includeFontPadding="false"
                    android:text="@string/menu_rate"
                    app:typeface="@string/custom_font_medium"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>