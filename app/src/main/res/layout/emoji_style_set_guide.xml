<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="271dp"
    android:layout_height="193dp"
    android:background="@drawable/border_shadow_bg"
    android:padding="10dp">


    <com.android.messaging.ui.view.MessagesTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="@string/emoji_style_set_guide"
        android:textColor="#3d3e42"
        android:textSize="16sp"
        app:typeface="@string/custom_font_bold" />

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="30.7dp"
        android:layout_height="30.7dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/gray_circle_btn_bg_drawable"
        android:padding="9dp"
        android:src="@drawable/cancel_btn" />

    <ImageView
        android:layout_width="189.7dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47.3dp"
        android:src="@drawable/emoji_style_guide" />

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/ok_btn"
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/blue_round_btn_bg"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="#ffffff"
        android:textSize="14.7sp"
        app:typeface="@string/custom_font_bold" />
</RelativeLayout>