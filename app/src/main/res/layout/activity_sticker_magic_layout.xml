<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/emoji_show_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/gray_circle_btn_bg_drawable"
        android:padding="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/sticker_magic_close_btn"
        tools:ignore="RtlHardcoded" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="74.3dp"
        android:layout_marginTop="61dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/emoji_show_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="33.3dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/emoji_blue_material_round_btn"
        android:gravity="center"
        android:text="@string/sticker_send_msg"
        android:textColor="#ffffffff"
        android:textSize="17.3sp" />

</FrameLayout>