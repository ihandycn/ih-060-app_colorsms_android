<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.messaging.ui.conversationlist.CustomizeGuideBackgroundView
        android:id="@+id/custom_guide_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/customize_guide_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/customize_guide_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customize_guide_new_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/customize_guide_clickable_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customize_guide_clickable_container_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/customize_guide_homepage"
            app:layout_constraintStart_toStartOf="@id/customize_guide_homepage"
            app:layout_constraintTop_toBottomOf="@id/customize_guide_homepage">

            <com.android.messaging.ui.view.MessagesTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="35.7dp"
                android:includeFontPadding="false"
                android:text="@string/customize_new_guide_title"
                android:textColor="#202227"
                android:textSize="20sp"
                app:typeface="@string/custom_font_semibold" />

            <com.android.messaging.ui.view.MessagesTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10.3dp"
                android:layout_marginEnd="35.7dp"
                android:includeFontPadding="false"
                android:lineSpacingExtra="3.3sp"
                android:text="@string/customize_new_guide_content"
                android:textColor="#6e717b"
                android:textSize="13.3sp"
                app:typeface="@string/custom_font_regular" />

            <com.android.messaging.ui.view.MessagesTextView
                android:id="@+id/customize_guide_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="39.7dp"
                android:layout_marginStart="29.3dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="29.3dp"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="#222222"
                android:textSize="16.7sp"
                app:typeface="@string/custom_font_bold" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
