<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/message_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="noHideDescendants"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/message_title"
            style="@style/ConversationMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mms_info"
            style="@style/ConversationMessageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subject_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="noHideDescendants"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject_text"
            style="@style/ConversationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web" />
    </LinearLayout>

    <com.android.messaging.ui.view.MessagesTextView
        android:id="@+id/message_text"
        style="@style/ConversationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:importantForAccessibility="no"
        android:includeFontPadding="false"
        android:visibility="gone"
        app:font_size_changeable="true"
        app:typeface="@string/custom_font_regular" />
</merge>

